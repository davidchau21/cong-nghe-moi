            <% for(let i = 0; i < data.length; i++){ %>
                <tr>
                    <td><%= data[i].maSanPham %></td>
                    <td><%= data[i].tenSanPham %></td>
                    <td><%= data[i].soLuong %></td>
                    <td><img src="<%= data[i].image %>" alt="avt_<%= data[i].maSanPham %>" 
                        width="48" height="48" /> </td>
                    <td><input type="checkbox" name="<%= data[i].maSanPham %>" id="<%= data[i].maSanPham %>"></td>    
                </tr>
                <% } %>

        </table>
        <input type="submit" value="Xoa">
    </form>
</body>
</html>